extends layout

block content
  #login
    .container
      #login-row.row.justify-content-center.align-items-center
        #login-column.col-md-6
          #login-box.col-md-12
            form#login-form.form(action='/login', method='post')
              h3.text-center.text-info Login
              .form-group
                label.text-info(for='username') Username:
                br
                input#username.form-control(type='text', name='username')
              .form-group
                label.text-info(for='password') Password:
                br
                input#password.form-control(type='password', name='password')
              .form-group
                br
                input.btn.btn-info.btn-md(type='submit')
              #register-link.text-right
                h4.text-info(href='#')= message

